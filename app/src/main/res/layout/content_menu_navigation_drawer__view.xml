<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.V_MenuNavigationDrawer.MenuNavigationDrawer_View"
    tools:showIn="@layout/app_bar_menu_navigation_drawer__view">


    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/comidas"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/pictureCard"
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:background="@drawable/icon_eat"
                    android:scaleType="centerCrop" />
                    <TextView
                        android:id="@+id/foodNameCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comidas"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textsize_username_card"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bebidas"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/picturebebida"
                    android:layout_width="match_parent"
                    android:layout_height="157dp"
                    android:background="@drawable/icon_drink"
                    android:scaleType="centerCrop" />
                <TextView
                    android:id="@+id/bebidaNameCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bebidas"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_username_card"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/pedidos"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/picturepedidos"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:background="@drawable/icon_order"
                    android:scaleType="centerCrop" />
                <TextView
                    android:id="@+id/pedidosNameCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pedidos"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_username_card"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/map"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/picturemap"
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:background="@drawable/icon_map"
                    android:scaleType="centerCrop" />
                <TextView
                    android:id="@+id/mapNameCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicanos"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_username_card"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>







</LinearLayout>