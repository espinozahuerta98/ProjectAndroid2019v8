<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectandroid2019">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity
            android:name=".View.V_MenuNavigationDrawer.MenuNavigationDrawer_View"
            android:label="@string/title_activity_menu_navigation_drawer__view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.V_CreateAccount.CreateAccount_View"
            android:parentActivityName=".View.V_Login.Login_View">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.V_Login.Login_View" />
        </activity>

        <activity
            android:name=".View.V_Food.Food_View"
            android:parentActivityName=".View.V_MenuNavigationDrawer.MenuNavigationDrawer_View">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.V_Login.Login_View" />
        </activity>

        <activity
            android:name=".View.V_Drink.Drink_View"
            android:parentActivityName=".View.V_MenuNavigationDrawer.MenuNavigationDrawer_View">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.V_Login.Login_View" />
        </activity>

        <activity
            android:name=".View.V_Order.Order_View"
            android:parentActivityName=".View.V_MenuNavigationDrawer.MenuNavigationDrawer_View">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.V_Login.Login_View" />
        </activity>

        <activity
            android:name=".View.V_Map.Map_View"
            android:parentActivityName=".View.V_MenuNavigationDrawer.MenuNavigationDrawer_View">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.V_Login.Login_View" />
        </activity>


        <activity android:name=".View.V_Login.Login_View" />
        <activity android:name=".View.Welcome_View">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>